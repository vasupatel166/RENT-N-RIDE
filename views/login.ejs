<!DOCTYPE html>
<html lang="en">
  <%- include("layouts/head") %>

  <body>
    <%- include("layouts/nav") %>

    <!-- Main -->
    <main>
      <div class="login-container container">
        <div class="row">
          <div class="col-md-4 offset-md-4">
            <h2 class="text-center text-dark mt-1">Login to your account</h2>
            <div class="login-card card my-4">
              <form
                action="/login"
                method="post"
                class="card-body cardbody-color p-lg-3"
              >
                <div class="text-center">
                  <img
                    src="/assets/img/login-image.jpg"
                    class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                    width="200px"
                    alt="profile"
                  />
                </div>

                <!-- Email Field -->
                <div class="mb-3">
                  <input
                    type="text"
                    class="form-control"
                    id="admin_email"
                    name="admin_email"
                    value="<%= email %>"
                    aria-describedby="emailHelp"
                    placeholder="Email"
                  />
                </div>

                <!-- Password Field -->
                <div class="mb-3">
                  <input
                    type="password"
                    class="form-control"
                    id="admin_password"
                    name="admin_password"
                    value="<%= password %>"
                    placeholder="Password"
                  />
                </div>

                <!-- Error message -->
                <div class="mb-3 text-center">
                  <% if (login_error) { %>
                  <div class="alert alert-danger"><%= login_error %></div>
                  <% } %>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                  <button
                    type="submit"
                    class="login btn btn-color px-5 mb-4 w-100"
                  >
                    Login
                  </button>
                </div>

                <!-- Signup Link -->
                <div
                  id="emailHelp"
                  class="form-text text-center mb-3 text-dark"
                >
                  Not Registered?
                  <a href="/signup" class="text-dark fw-bold"
                    >Create an Account</a
                  >
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!-- Footer-->
    <%- include("layouts/footer") %>

    <!-- Scripts -->
    <%- include("layouts/script") %>
  </body>
</html>
